<VirtualHost *:80>
	ServerAdmin webmaster@localhost
	DocumentRoot {{ document_root }}

	<Directory {{ document_root }}>
		<IfVersion < 2.4>
			Allow from all
		</IfVersion>
		<IfVersion >= 2.4>
			Require all granted
		</IfVersion>
	</Directory>

	ErrorLog {{ log_root }}/error.log
	CustomLog {{ log_root }}/access.log combined
</VirtualHost>
